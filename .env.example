# Database (SQLite for dev)
DATABASE_URL="file:./dev.db"

# OpenAI: set ENABLE_OPENAI=true AND a valid key to use AI; otherwise app runs 100% local (DB + keyword scoring)
ENABLE_OPENAI=false
# OPENAI_API_KEY="sk-..."

# Amazon PA-API (OFF for MVP)
ENABLE_PAAPI=false
# PAAPI_ACCESS_KEY=
# PAAPI_SECRET_KEY=
# PAAPI_PARTNER_TAG=

# ML (local): set true to rank recommendations with trained ONNX model (ml/model.onnx)
USE_ML=true

# Optional: simple admin protection (basic auth or shared secret)
ADMIN_SECRET=your-admin-secret
